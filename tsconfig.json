{
  "compilerOptions": {
    "target": "es6",                          /* Set the JavaScript language version for emitted JavaScript */
    "module": "commonjs",                      /* Specify what module code is generated */
    "rootDir": "./src",                        /* Source folder for TypeScript files */
    "outDir": "./Dist",                        /* Output folder for compiled JavaScript files */
    "esModuleInterop": true,                   /* Enable esModuleInterop for compatibility with CommonJS */
    "forceConsistentCasingInFileNames": true,  /* Ensure consistent casing in file names */
    "strict": true,                            /* Enable all strict type-checking options */
    "skipLibCheck": true,                      /* Skip type checking of declaration files */
    "noEmitOnError": true                      /* Prevent output if there are any type errors */
  },
  "include": ["src/**/*"],                     /* Include all files from the src folder */
  "exclude": ["node_modules"]                  /* Exclude node_modules folder from the compilation */
}
